<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#EBEFF9"
             tools:context="com.example.alex.nasapp.ui.eye_in_the_sky.SatellitePhotoFragment">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/photoImageContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:textColor="#909090"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/photoDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

         <ImageView
        android:id="@+id/photoImageView"
        android:contentDescription="@string/satellite_photo_on_selected_latitude_and_longitude"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    </LinearLayout>

</FrameLayout>
